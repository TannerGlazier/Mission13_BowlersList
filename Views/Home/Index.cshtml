@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Bowler>
<div class="row p-1 m-1">
    <h1 class="col">@(ViewBag.TeamName != null ? ViewBag.TeamName: "Bowlers")</h1>
    <a class="btn btn-outline-primary float-right m-1 p-1 text-center" asp-area="" asp-controller="Home" asp-action="AddBowler" asp-route-id="@ViewBag.NextBowler">Add a Bowler</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="font-weight-bold">
        <tr>
            <td>Name</td>
            <td>Phone</td>
            <td>Address</td>
            <td>Team Name</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.BowlerFirstName @b.BowlerMiddleInit @b.BowlerLastName</td>
                <td>@b.BowlerPhoneNumber</td>
                <td>@b.BowlerAddress @b.BowlerCity, @b.BowlerState, @b.BowlerZip</td>
                <td>@b.Team.TeamName</td>
                <td><a asp-controller="Home" asp-action="Edit" asp-route-id="@b.BowlerID" class="btn btn-outline-warning">Edit</a></td>
                <td><a asp-controller="Home" asp-action="Delete" asp-route-id="@b.BowlerID" class="btn btn-outline-danger">Delete</a></td>
            </tr>

        }
    </tbody>
</table>