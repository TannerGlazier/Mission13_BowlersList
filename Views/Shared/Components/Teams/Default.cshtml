@{
}

@model IEnumerable<string>

<a asp-controller="Home" asp-action="Index" asp-route-TeamName="" class="btn btn-block btn-outline-secondary">Home</a>

@foreach(string t in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-TeamName="@t" class="btn btn-block @(ViewBag.SelectedTeam == t ? "btn-primary": "btn-outline-secondary")">@t</a> 
}
